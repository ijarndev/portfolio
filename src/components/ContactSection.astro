---
import SocialLinkBox from "./SocialLinkBox.astro"
import { aboutPageContent } from "../config"
---

<section class="mt-32 max-w-2xl mx-auto px-6 sm:flex sm:gap-16">
  <h2 class="mb-8 sm:mb-0 opacity-60">Contacto</h2>
  <div>
    <div class="mb-6">
      {aboutPageContent.work.description}
    </div>
    <div class="grid grid-cols-2 gap-2 group">
      {
        aboutPageContent.connect.links.map((item) => (
          <SocialLinkBox {...item} />
        ))
      }
    </div>
  </div>
</section>