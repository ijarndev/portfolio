---
import { Image } from "astro:assets";
import type { ResumeItem, SkillItem } from "../types/config";

type Props = SkillItem;

const { icon, name } = Astro.props;
---

<a
  href='https://github.com/ijarndev'
  target="_blank"
  class="py-3 flex items-center justify-between group-hover:opacity-60 hover:!opacity-100 transition-opacity"
>
  <div class="flex items-center gap-4">
    <Image
      src={icon}
      alt={name}
      width={40}
      height={40}
      class="w-[40px] h-[40px] object-cover"
    />
  </div>
</a>
